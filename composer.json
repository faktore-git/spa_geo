{
    "name": "faktore-git/spa_geo",
    "description": "NABU SPA mapshapes",
    "homepage": "https://github.com/faktore-git/spa_geo",
    "type": "typo3-cms-extension",
    "license": "proprietary",
    "authors": [
        {
            "name": "Faktor E GmbH",
            "email": "info@faktor-e.de",
            "homepage": "https://www.www.faktor-e.de",
            "role": "Developer"
        }
    ],

    "replace": {
        "spa_geo": "self.version"
    }

    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },

    "scripts": {
        "post-autoload-dump": [
          "mkdir -p .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData",
          "[ -L .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_high.topojson ] || ln -snvf ../../../../spa_de_2018_high.topojson .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_high.topojson",
          "[ -L .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_low.topojson ] || ln -snvf ../../../../spa_de_2018_low.topojson .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_low.topojson",
          "[ -L .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_medium.topojson ] || ln -snvf ../../../../spa_de_2018_medium.topojson .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_medium.topojson",
          "[ -L .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_simplified.geojson ] || ln -snvf ../../../../spa_de_2018_simplified.geojson .Build/Web/typo3conf/ext/fe_spa/Resources/Public/MapData/spa_de_2018_simplified.geojson"
        ]
    },
    "extra": {
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
